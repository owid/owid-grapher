{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Launch site dev",
            "program": "${workspaceFolder}/adminSiteServer/app.ts",
            "request": "launch",
            "preLaunchTask": "start (full)",
            "type": "node",
            "runtimeExecutable": "yarn",
            "runtimeArgs": [
                "tsx",
                "--tsconfig",
                "tsconfig.tsx.json"
            ]
        },
        {
            "name": "Remote dev",
            "program": "${workspaceFolder}/adminSiteServer/app.ts",
            "request": "launch",
            "preLaunchTask": "start (remote)",
            "type": "node",
            "runtimeExecutable": "yarn",
            "runtimeArgs": [
                "tsx",
                "--tsconfig",
                "tsconfig.tsx.json"
            ]
        },
        {
            "name": "Run migrate WP to ArchieML",
            "program": "${workspaceFolder}/db/migrateWpPostsToArchieMl.ts",
            "request": "launch",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "type": "node",
            "runtimeExecutable": "yarn",
            "runtimeArgs": [
                "tsx",
                "--tsconfig",
                "tsconfig.tsx.json"
            ]
        },
        {
            "name": "Run SVGTester",
            "program": "${workspaceFolder}/devTools/svgTester/verify-graphs.ts",
            "request": "launch",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "type": "node",
            "runtimeExecutable": "yarn",
            "runtimeArgs": [
                "tsx",
                "--tsconfig",
                "tsconfig.tsx.json"
            ],
            "args": [
                "-g",
                "367"
            ]
        },
        {
            "name": "Launch admin server",
            "program": "${workspaceFolder}/adminSiteServer/app.ts",
            "request": "launch",
            "type": "node",
            "runtimeExecutable": "yarn",
            "runtimeArgs": [
                "tsx",
                "--tsconfig",
                "tsconfig.tsx.json"
            ],
            // Files to exclude from debugger (e.g. call stack)
            "skipFiles": [
                // Node.js internal core modules
                "<node_internals>/**",
                // Ignore all dependencies (optional)
                "${workspaceFolder}/node_modules/**",
            ],
        },
        {
            "name": "Launch admin server (via fnm)",
            "program": "${workspaceFolder}/adminSiteServer/app.ts",
            "request": "launch",
            "type": "node",
            "runtimeExecutable": "fnm",
            "runtimeArgs": [
                "exec",
                "--",
                "yarn",
                "tsx",
                "--tsconfig",
                "tsconfig.tsx.json"
            ],
            // Files to exclude from debugger (e.g. call stack)
            "skipFiles": [
                // Node.js internal core modules
                "<node_internals>/**",
                // Ignore all dependencies (optional)
                "${workspaceFolder}/node_modules/**",
            ],
        },
        {
            "name": "Run tests (via fnm)",
            "request": "launch",
            "type": "node",
            "runtimeExecutable": "fnm",
            "runtimeArgs": [
                "exec",
                "--",
                "yarn",
                "test",
                "run",
                "--reporter=dot"
            ],
            // Files to exclude from debugger (e.g. call stack)
            "skipFiles": [
                // Node.js internal core modules
                "<node_internals>/**",
                // Ignore all dependencies (optional)
                "${workspaceFolder}/node_modules/**",
            ],
        },
        {
            "name": "Run refreshExplorerViews (via fnm)",
            "program": "${workspaceFolder}/devTools/refreshExplorerViews.ts",
            "request": "launch",
            "type": "node",
            "runtimeExecutable": "fnm",
            "runtimeArgs": [
                "exec",
                "--",
                "yarn",
                "tsx",
                "--tsconfig",
                "tsconfig.tsx.json"
            ],
            "skipFiles": [
                "<node_internals>/**",
                "${workspaceFolder}/node_modules/**"
            ]
        },
        {
            "name": "Attach to node",
            "type": "node",
            "request": "attach",
            "restart": true
        },
    ]
}