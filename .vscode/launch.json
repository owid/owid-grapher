{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "args": [],
            "internalConsoleOptions": "openOnSessionStart",
            "name": "Jest Tests",
            "program": "${workspaceFolder}/node_modules/jest/bin/jest.js",
            "request": "launch",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "skipFiles": [
                "<node_internals>/**"
            ],
            "type": "node"
        },
        {
            //somewhat unstable, WIP
            "type": "node",
            "request": "launch",
            "name": "Jest Test current file",
            "program": "${workspaceFolder}/node_modules/.bin/jest",
            "args": [
                "${fileBasenameNoExtension}.js",
                "--watch"
            ],
            "args": [
                "${fileBasenameNoExtension}.js",
                "--watch"
            ],
            "console": "integratedTerminal"
            // "internalConsoleOptions": "neverOpen"
        },
        {
            "name": "Launch site dev",
            "program": "${workspaceFolder}/adminSiteServer/app.ts",
            "request": "launch",
            "preLaunchTask": "start (full)",
            "type": "node",
            "runtimeExecutable": "yarn",
            "runtimeArgs": [
                "tsx",
                "--tsconfig",
                "tsconfig.tsx.json"
            ]
        },
        {
            "name": "Remote dev",
            "program": "${workspaceFolder}/adminSiteServer/app.ts",
            "request": "launch",
            "preLaunchTask": "start (remote)",
            "type": "node",
            "runtimeExecutable": "yarn",
            "runtimeArgs": [
                "tsx",
                "--tsconfig",
                "tsconfig.tsx.json"
            ]
        },
        {
            "name": "Run migrate WP to ArchieML",
            "program": "${workspaceFolder}/db/migrateWpPostsToArchieMl.ts",
            "request": "launch",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "type": "node",
            "runtimeExecutable": "yarn",
            "runtimeArgs": [
                "tsx",
                "--tsconfig",
                "tsconfig.tsx.json"
            ]
        },
        {
            "name": "Run SVGTester",
            "program": "${workspaceFolder}/devTools/svgTester/verify-graphs.ts",
            "request": "launch",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "type": "node",
            "runtimeExecutable": "yarn",
            "runtimeArgs": [
                "tsx",
                "--tsconfig",
                "tsconfig.tsx.json"
            ],
            "args": [
                "-g",
                "367"
            ]
        },
        {
            "name": "Launch admin server",
            "program": "${workspaceFolder}/adminSiteServer/app.ts",
            "request": "launch",
            "type": "node",
            "runtimeExecutable": "yarn",
            "runtimeArgs": [
                "tsx",
                "--tsconfig",
                "tsconfig.tsx.json"
            ],
            // Files to exclude from debugger (e.g. call stack)
            "skipFiles": [
                // Node.js internal core modules
                "<node_internals>/**",
                // Ignore all dependencies (optional)
                "${workspaceFolder}/node_modules/**",
            ],
        },
        {
            "name": "Launch admin server (via fnm)",
            "program": "${workspaceFolder}/adminSiteServer/app.ts",
            "request": "launch",
            "type": "node",
            "runtimeExecutable": "fnm",
            "runtimeArgs": [
                "exec",
                "--",
                "yarn",
                "tsx",
                "--tsconfig",
                "tsconfig.tsx.json"
            ],
            // Files to exclude from debugger (e.g. call stack)
            "skipFiles": [
                // Node.js internal core modules
                "<node_internals>/**",
                // Ignore all dependencies (optional)
                "${workspaceFolder}/node_modules/**",
            ],
        },
        {
            "name": "Attach to node",
            "type": "node",
            "request": "attach",
            "restart": true
        },
        {
            "name": "Vitest Debug",
            "type": "node",
            "request": "launch",
            "program": "${workspaceFolder}/node_modules/vitest/vitest.mjs",
            "args": [
                "run",
                "Explorer"
            ],
            "autoAttachChildProcesses": true,
            "smartStep": true,
            "skipFiles": [
                "<node_internals>/**"
            ],
            "console": "integratedTerminal"
        }
    ]
}
