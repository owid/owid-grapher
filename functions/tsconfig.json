{
    "compilerOptions": {
        "isolatedModules": true,
        "composite": true,

        "target": "es2023",
        "module": "es2022",
        "moduleResolution": "node",
        "lib": ["esnext"],
        "types": ["@cloudflare/workers-types"],
        "esModuleInterop": true,

        "noEmit": true,

        "outDir": "./dist",
        "skipLibCheck": true,
        "resolveJsonModule": true,

        "strict": true,
        "alwaysStrict": true,
        "allowJs": false,
        "jsx": "react-jsx",

        "noImplicitOverride": true
    },
    "include": ["**/*.ts", "**/*.tsx", "**/*.json"],
    "references": [
        { "path": "../packages/@ourworldindata/components" },
        { "path": "../packages/@ourworldindata/core-table" },
        { "path": "../packages/@ourworldindata/explorer" },
        { "path": "../packages/@ourworldindata/grapher" },
        { "path": "../packages/@ourworldindata/types" },
        { "path": "../packages/@ourworldindata/utils" }
    ]
}
